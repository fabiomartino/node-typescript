{
  "name": "node.ts",
  "version": "1.0.0",
  "description": "A simple node base using typescript",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon src/main.ts",
    "build": "tsc -p .",
    "lint:code": "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore --loglevel silent \"**/*.{json,scss}\""
  },
  "keywords": [
    "node",
    "typescript",
    "prettier"
  ],
  "author": "Fabio Martino",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.54",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-typescript-sort-keys": "1.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">= 10.9"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ]
}
